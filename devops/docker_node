# -*- mode: dockerfile -*-

FROM node:7.10

RUN apt-get update && apt-get install -y vim

ADD ./package.json /app/
RUN cd /app && npm install

ADD ./server /app/server/
ADD ./client /app/client/
ADD ./devops /app/devops/

EXPOSE 8000

WORKDIR /app/server

USER node

ENTRYPOINT ["nodemon", "exp.js"]
